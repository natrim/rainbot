{
	"name": "rainbot",
	"version": "1.3.1",
	"description": "Simple js IRC pony bot",
	"author": "Natrim",
	"main": "./libs/bot",
	"repository": {
		"type": "git",
		"url": "https://github.com/natrim/rainbot.git"
	},
	"scripts": {
		"start": "node ./app",
		"pretest": "./node_modules/.bin/jshint --reporter=unix .",
		"test": "./node_modules/.bin/mocha ./test",
		"minified-test": "./node_modules/.bin/mocha ./test --reporter min",
		"lint": "./node_modules/.bin/jshint --reporter=unix .; true"
	},
	"pre-commit" : [
		"pretest",
		"minified-test"
	],
	"dependencies": {
		"request": "*",
		"time": "*",
		"cheerio": "*"
	},
	"devDependencies": {
		"chai": "*",
		"mocha": "*",
		"jshint": "*",
		"pre-commit": "*"
	},
	"engines": {
		"node": ">=0.10"
	}
}
